  "environment_variables": {
    "backend": {
      "BACKEND_URL": "http://saasagent_backend:8000",
      "WHATSAPP_PHONE_ID": "your_whatsapp_phone_id",
      "WHATSAPP_TOKEN": "your_whatsapp_access_token",
      "EMAIL_FROM": "automation@saasai.io"
    },
    "frontend": {
      "NEXT_PUBLIC_API_URL": "http://localhost:8000/api"
    }
  },
  "webhook_endpoints": {
    "proposal_trigger": {
      "url": "http://n8n:5678/webhook/proposal_trigger",
      "method": "POST",
      "payload": {
        "resume_id": "number",
        "job_id": "number",
        "email": "string (optional)",
        "phone": "string (optional)"
      }
    },
    "invoice_summary": {
      "url": "http://n8n:5678/webhook/invoice_summary",
      "method": "POST",
      "payload": {
        "action": "string"
      }
    }
  }
